@model Proyecto_Final_Progra_Web.Models.Carta

<link href="~/css/style_cartas.css" rel="stylesheet" />

<h1>Editar Carta</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="CartaId" />
    <div class="form-group">
        <label asp-for="Nombre" class="control-label"></label>
        <input asp-for="Nombre" class="form-control" />
        <span asp-validation-for="Nombre" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Descripcion" class="control-label"></label>
        <textarea asp-for="Descripcion" class="form-control"></textarea>
        <span asp-validation-for="Descripcion" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PuntosAtaque" class="control-label"></label>
        <input asp-for="PuntosAtaque" class="form-control" />
        <span asp-validation-for="PuntosAtaque" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PuntosDefensa" class="control-label"></label>
        <input asp-for="PuntosDefensa" class="form-control" />
        <span asp-validation-for="PuntosDefensa" class="text-danger"></span>
    </div>
    <br />
    <button type="submit" class="btn btn-primary">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
