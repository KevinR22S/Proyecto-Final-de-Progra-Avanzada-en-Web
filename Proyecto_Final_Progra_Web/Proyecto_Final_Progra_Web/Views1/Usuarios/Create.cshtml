@model Proyecto_Final_Progra_Web.Models.Usuario

@{
    ViewData["Title"] = "Crear Usuario";
}

<link rel="stylesheet" href="~/css/custom-styles.css" />

<div class="jumbotron jumbotron-fluid text-center text-white bg-dark">
    <div class="container">
        <h1 class="display-4">Crear Nuevo Usuario</h1>
        <p class="lead">Completa el formulario para agregar un nuevo usuario al sistema.</p>
    </div>
</div>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h2 class="card-title">Nuevo Usuario</h2>
                    <form asp-action="Create">
                        <div class="form-group">
                            <label asp-for="NombreUsuario" class="control-label">Nombre de Usuario</label>
                            <input asp-for="NombreUsuario" class="form-control" required />
                            <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ContrasenaHash" class="control-label">Contraseña</label>
                            <input asp-for="ContrasenaHash" class="form-control" required />
                            <span asp-validation-for="ContrasenaHash" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Rol" class="control-label">Rol</label>
                            <input asp-for="Rol" class="form-control" required />
                            <span asp-validation-for="Rol" class="text-danger"></span>
                        </div>
 @*                        <div class="form-group">
                            <label asp-for="CreadoEn" class="control-label">Fecha de Creación</label>
                            <input asp-for="CreadoEn" class="form-control" readonly />
                            <span asp-validation-for="CreadoEn" class="text-danger"></span>
                        </div> *@
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
